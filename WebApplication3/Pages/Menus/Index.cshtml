@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].DishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Volume3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].IngredientCodeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientCodeNavigation.IngredientName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DishCode">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DishCode">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DishCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
