<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse[0].IngredientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse[0].Volume)
            </th>
