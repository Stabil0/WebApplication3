                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfIfe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IngredientCode">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IngredientCode">Details</a> |
